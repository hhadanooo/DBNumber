<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.hrwanheda.dbnumber.CheckPermissionAndIntroSlider.ActivityCheckPerm"
    android:id="@+id/Activity_check_perm_rel">




    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_top_tv_ex"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/activity_check_perm_tv_explain"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:textColor="#FFF"
        android:background="#601D3333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TextPermission"
        android:gravity="center"
        />

    <Button
        android:background="@drawable/buttonshadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/View_bottom_btn_con"
        android:id="@+id/activity_check_perm_btn"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/View_bottom_btn_con"/>

    <com.comix.overwatch.HiveProgressView
        android:id="@+id/activity_check_perm_progress"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="192dp"
        android:layout_height="192dp"
        app:hive_animDuration="5000"
        app:hive_color="@color/colorAccent"
        app:hive_maxAlpha="255"
        app:hive_rainbow="true"
        app:hive_cornerRadius="20"
        app:hive_shrink="true"
        />

    <View
        android:visibility="gone"
        android:background="#90000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_check_perm_view"/>



</RelativeLayout>